@model List<Model.EF.Menu>
<div class="call">
    <p><span>Need help?</span> call us <span class="number">0-69-696969</span></p>
</div>
<div class="account_desc">
    @{
        var session = (UserLogin)Session[OnlineShop.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
            }

        </ul>
    }
    else
    {
        <ul>
            <li>Hello :@session.UserName</li>
            <li>@Html.ActionLink("Exit", "Logout", "User")</li>
        </ul>
    }

</div>
<div class="clear"></div>
